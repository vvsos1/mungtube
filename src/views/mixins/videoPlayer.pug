mixin videoPlayer(video={})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.fileUrl}`, autoplay)
    .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up.unmuted-icon
                    i.fas.fa-volume-mute.muted-icon.invisible
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play.play-icon
                    i.fas.fa-pause.pause-icon.invisible
            .videoPlayer__column
                span
                    i.fas.fa-expand